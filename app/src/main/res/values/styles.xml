<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#33691E</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#33691E</item>
    </style>
    <!-- Style for the team views -->
    <style name="TeamStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Style for the score views -->
    <style name="ScoreStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">72sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Style for the green buttons -->
    <style name="ButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/points_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Style for the text views between the buttons -->
    <style name="MidTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/rugbyGreen</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for the separator layout -->
    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separatorHeight</item>
        <item name="android:layout_marginBottom">@dimen/separatorMarginBottom</item>
        <item name="android:layout_marginTop">@dimen/separatorMarginTop</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>